<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBooks"
    android:background="@color/white"
    >


    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/scancode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:onClick="scancode"
        android:text="scan ISBN "
        android:textColor="@color/black"></Button>

    <TextView
        android:id="@+id/isbnn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/scancode"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>


    <TextView
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_below="@id/scancode"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toStartOf="@+id/isbn"
        android:text="ISBN "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/isbn"
        tools:ignore="UnknownId"></TextView>


    <Button
        android:id="@+id/dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/isbnn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:background="@color/white"
        android:text="confirm isbn code"
        android:textColor="@color/black"></Button>

    <Button
        android:id="@+id/nextt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="68dp"
        android:background="@color/white"
        android:text="next"></Button>
</RelativeLayout>